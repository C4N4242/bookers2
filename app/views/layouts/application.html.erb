<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/4c39bb1393.js" crossorigin="anonymous"></script>
  </head>

  <body>
    <header class="bg-dark text-white shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand p-3" href="/" style="font-size:2rem; font-weight:bold;">
            Bookers
          </a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                  aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
                <li class="nav-item">
                  <%= link_to raw('<i class="fa-solid fa-house"></i> Home'), user_path(current_user.id), class: 'nav-link text-white' %>
                </li>
                <li class="nav-item">
                  <%= link_to raw('<i class="fa-solid fa-users"></i> Users'), users_path, class: 'nav-link text-white' %>
                </li>
                <li class="nav-item">
                  <%= link_to raw('<i class="fa-solid fa-book-open"></i> Books'), books_path, class: 'nav-link text-white' %>
                </li>
                <li class="nav-item">
                  <%= link_to raw('<i class="fa-solid fa-right-from-bracket"></i> Log out'), destroy_user_session_path, method: :delete, class: 'nav-link text-white' %>
                </li>
              <% else %>
                <li class="nav-item">
                  <%= link_to raw('<i class="fa-solid fa-house"></i> Home'), root_path, class: 'nav-link text-white' %>
                </li>
                <li class="nav-item">
                  <%= link_to raw('<i class="fa-solid fa-link"></i> About'), home_about_path, class: 'nav-link text-white' %>
                </li>
                <li class="nav-item">
                  <%= link_to raw('<i class="fa-solid fa-user-plus"></i> Sign up'), new_user_registration_path, class: 'nav-link text-white' %>
                </li>
                <li class="nav-item">
                  <%= link_to raw('<i class="fa-solid fa-right-to-bracket"></i> Log in'), new_user_session_path, class: 'nav-link text-white' %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main class="mb-auto container mt-4">
      <div class="row">
        <div class="col-md-12">
          <p class="notice"><%= notice %></p>
          <p class="alert"><%= alert %></p>
          <%= yield %>
        </div>
      </div>
    </main>
    <footer class="bg-light text-dark pt-4 pb-4 mt-4">
      <div class="container">
        <div class="row">
          <div class="col-12 text-center">
            CopyRight Infratop.inc
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
